{
  "name": "@punyts/state-react",
  "version": "1.0.0",
  "publishConfig": {
    "access": "public"
  },
  "type": "module",
  "description": "Controls for hooking up react to the real-time state system",
  "main": "dist/index.js",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "clean": "tsc -b tsconfig.json --clean && node -e \"try{require('fs').rmSync('dist',{recursive:true,force:true})}catch{}\"",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "npm run typecheck && tsc -p tsconfig.json",
    "build:watch": "tsc -p tsconfig.json -w",
    "dev": "npm run build:watch",
    "test": "echo \"(no tests)\""
  },
  "keywords": [],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "@punyts/core": "^1.0.0",
    "@punyts/state": "^1.0.0"
  },
  "devDependencies": {
    "@testing-library/react": "^16.3.0",
    "@types/jest": "^30.0.0",
    "jest": "^30.2.0",
    "ts-jest": "^29.4.4",
    "typescript": "^5.9.3"
  }
}
